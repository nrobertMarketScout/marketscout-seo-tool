<section class="bg-gray-50 py-12 sm:py-16 px-4 sm:px-6 lg:px-8">
  <h2 class="text-center text-2xl sm:text-3xl font-semibold mb-8">Why&nbsp;Choose&nbsp;Us</h2>
  <div class="mx-auto grid gap-6 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl">
    {{#each images}}
    <figure class="overflow-hidden rounded-2xl shadow hover:shadow-lg transition">
      <img loading="lazy" src="{{this}}" alt="Why choose us"
        class="w-full h-56 object-cover opacity-0 transition-opacity duration-700 ease-in-out"
        onload="this.classList.remove('opacity-0')" />
    </figure>
    {{/each}}
  </div>
</section>